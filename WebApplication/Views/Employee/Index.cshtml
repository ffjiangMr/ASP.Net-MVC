@using WebApplication.ViewModels
@model EmployeeListViewModel

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{
    MyView
}
@section ContentBody{
    <div>
        @{
            Html.RenderAction("GetAddNewLink");
        }
        <table border="1">
            <tr>
                <th>Employee Name</th>
                <th>Salary</th>
            </tr>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td><em>@employee.EmployeeName</em></td>
                    <td>
                        <span style="background-color:@employee.SalaryColor">
                            <em> @employee.Salary<br /></em>
                        </span>
                    </td>
                </tr>
            }
        </table>
    </div>
}
